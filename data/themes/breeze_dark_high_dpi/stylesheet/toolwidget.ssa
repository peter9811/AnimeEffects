QGroupBox {
    color: #303030;
    background-color: #323232;
    border:0.1em solid transparent;
    border-radius:0.8em;
    margin-top: 0.6em;
    padding-left:  0.6em;
    padding-right: 0.6em;
    padding-top:   1.2em;
    padding-bottom: 3.4em;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position:top left;
	color: #ffffff;
	border-top 1em transparent;
	border-bottom: 0.1em inset #76797c;
}

QPushButton {
    color: #eff0f1;
    border: 0.1em solid #76797c;
    border-radius: 0.2em;
    padding: 0.2em;
    background-color: #323232;
	width: 1.8em;
	height: 1.8em;
	icon-size: 35px;
}

QPushButton:hover {
    color: #eff0f1;
    border: 0.1em solid #7e7e7e;
    background-color: #323232;
}

QPushButton:disabled {
    color: #454545;
    border: 0.1em solid #76797c;
    background-color: #323232;
}

QPushButton:pressed {
    color: #eff0f1;
    border: 0.1em inset #8C8C8C;
    margin-top: 0.2em;
    background-color: #454a4f;
}

QPushButton:checked {
    color: #eff0f1;
    border: 0.1em inset #76797c;
    margin-top: 0em;
    background-color: #626568;
}

QSlider::groove:horizontal {
    border: 0.1em inset #323232;
    height: 0.5em;
    background: 2c2c2c;
    margin: 0.2em 0;
    border-radius: 1em;
}

QSlider::handle:horizontal {
    background: 2c2c2c;
    border: 0.1em solid #323232;
    width: 0.8em;
    margin: -0.6em 0; /* handle is placed by default on the contents rect of the groove. Expand outside the groove */
    border-radius: 0.2em;
}

QCheckBox#checkItem {
	padding: 0.2em;
}
QCheckBox#checkItem::indicator {
    margin: 0em;
    padding: 0.2em;
    width: 1em;
    height: 1em;
}
