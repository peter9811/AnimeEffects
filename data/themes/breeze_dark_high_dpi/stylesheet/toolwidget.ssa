QPushButton#toolButton {
    color: #eff0f1;
    background-color: #323232;
    border: 0.1em solid #76797c;
    border-radius: 0.6em;
    padding: -0.1em;
    width: 2.6em;
    height: 2.6em;
    icon-size: 2.6em;
}

QPushButton#toolButton:hover {
    color: #eff0f1;
    border: 0.1em solid #7e7e7e;
    background-color: #323232;
}

QPushButton#toolButton:disabled {
    color: #454545;
    border: 0.1em solid #76797c;
    background-color: #323232;
}

QPushButton#toolButton:pressed {
    color: #eff0f1;
    border: 0.1em inset #76797c;
    margin-top: 0.3em;
    background-color: #454a4f;
}

QPushButton#toolButton:checked {
    color: #eff0f1;
    border: 0.1em inset #76797c;
    margin-top: 0.2em;
    background-color: #626568;
}

